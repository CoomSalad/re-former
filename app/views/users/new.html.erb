<% if false %>
<form action="/users" method="post" accept-charset="UTF-8">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label for="username">Username:</label><br>
    <input type="text" id="username" name="user[username]"><br>
    <label for="email">Email:</label><br>
    <input type="email" id="email" name="user[email]"><br>
    <label for="password">Password:</label><br>
    <input type="password" id="password" name="user[password]"><br>
    <input type="submit" value="Create">
</form>
<% end %>

<% if false %>
<%= form_tag("/users", method: "post") do %>
    <%= label_tag(:username, "Username:") %><br>
    <%= text_field_tag(:username) %><br>
    <%= label_tag(:email, "Email:") %><br>
    <%= email_field_tag(:email) %><br>
    <%= label_tag(:password, "Password:") %><br>
    <%= password_field_tag(:password) %><br>
    <%= submit_tag("Create") %><br>
<% end %>
<% end %>

<%= form_with model: @user do |form| %>
    <div>
        <%= form.label :username, "Username:" %>
        <%= form.text_field :username %>
    </div>
    <div>
        <%= form.label :email, "Email:" %>
        <%= form.email_field :email, placeholder: "example@gmail.com" %>
    </div>
    <div>
        <%= form.label :password, "Password:" %>
        <%= form.password_field :password, placeholder: "Must include A-Z, a-z and symbol" %>
    </div>
    <div>
        <%= form.submit "Create" %>
    </div>
<% end %>